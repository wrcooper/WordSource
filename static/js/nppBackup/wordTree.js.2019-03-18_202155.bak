
var width = 1400;
var height = 1600;

displayID = 0;

cur_index = 0;

class DisplayNode{
  constructor(node, i){
    this.id = displayID++;
    this.name = node.name;
    this.children = [];
    var j = i - 1;
    if (i > 1) {
      for (var index in node.children){
        var child = new DisplayNode(node.children[index], j);
        this.children.push(child);
      }
    }
  }
}
  
