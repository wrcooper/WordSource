	background-color:black;
	padding: 10px;
	border: 2px solid grey;
	border-radius: 2px;
	margin-bottom: 40px;
}

.navbar_btn{
	margin:5px;
}

.selected_wordsource{
	color:white;
	background-color:black;
	padding: 10px;
}

.vis_selector{
	margin-top:20px;
	border: 2px solid white;
}

.vis_button{
	margin: 5px 1%;
	width:24%;
}

