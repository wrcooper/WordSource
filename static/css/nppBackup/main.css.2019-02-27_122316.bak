.upload_container{
	border: 2px solid black;
	border-radius:2px;
	padding:20px;
	margin-bottom: 20px;
}

.wordsource_selector{
	float:left;
	width:48%;
	margin-right: 1%;
	margin-left: 1%;
	box-shadow: 0 0 10px 0px #000;
	border: 2px solid grey;
	background-color: black;
	color:white;
	padding: 10px;
	margin-top:10px;
	margin-bottom:10px;
	cursor:pointer;
}

